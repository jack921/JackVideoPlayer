<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/top_background">

        <TextView
            android:id="@+id/av_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:text="av1886652"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_background">

        <ImageView
            android:id="@+id/play_btn"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/play_stop"/>

        <TextView
            android:id="@+id/time_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/play_btn"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textColor="#ffffff"
            android:text="00:00"/>

        <TextView
            android:id="@+id/time_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/time_img"
            android:textColor="#ffffff"
            android:text="/"/>

        <TextView
            android:id="@+id/time_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/time_tip"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textColor="#ffffff"
            android:text="00:00"/>

         <ImageView
             android:id="@+id/screen_btn"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="5dp"
             android:src="@mipmap/ic_full_screen" />

        <SeekBar
            android:id="@+id/av_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/time_all"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/screen_btn"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/time_progress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_drawable_bg"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/progressbar_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:text="10:30"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/controller_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_drawable_bg"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ic_tip_img"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_sound"/>

        <TextView
            android:id="@+id/sound_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic_tip_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:text="10:30"/>

    </RelativeLayout>



</RelativeLayout>

